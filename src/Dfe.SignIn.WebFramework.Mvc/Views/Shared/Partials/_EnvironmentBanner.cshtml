@inject Microsoft.AspNetCore.Hosting.IWebHostEnvironment Env

@if (platformOptionsAccessor.Value?.EnvironmentName != EnvironmentName.Prod && Env.EnvironmentName != "Local")
{
    <div class="app-environment-banner">
        <div class="govuk-width-container">
            ATTENTION! This environment can be unavailable as we're developing new features. Please do not report any outages.
        </div>
    </div>
}
