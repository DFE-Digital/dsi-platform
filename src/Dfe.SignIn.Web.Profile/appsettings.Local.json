{
  // IMPORTANT:
  // ==========
  //
  // This file includes sensible default option values to assist local development;
  // and acts as a guide by suggesting what options are available.
  //
  // Overrides properties from 'appsettings.Development.json' where present in both.
  //
  //   * DO NOT put secrets in this file.
  //
  //   * DO use `dotnet user-secrets` to override options locally.
  //     For example,
  //         dotnet user-secrets SelectOrganisationSessionRedisCache:InstanceName "overridden-prefix:"
  //
  //   * DO use <option_name> placeholder values for sensitive options.
  //
  "Platform": {
    "HelpUrl": "http://localhost:5012",
    "ProfileUrl": "http://localhost:41011",
    "SurveyUrl": "https://survey.localhost"
  },
  "Audit": {
    "ApplicationName": "Profile"
  },
  "Oidc": {
      "ClientId": "<client_id>",
      "ClientSecret": "<client_secret>",
      "Authority": "<authority>",
      "MetadataAddress": "<metadata_address>"
  },
  "Session": {
      "DurationInMinutes": 20,
      "NotifyRemainingMinutes": 5
  },
  "SecurityHeaderPolicy": {
    "AllowedOrigins": [
      "*.signin.education.gov.uk",
      "localhost:*"
    ]
  },
  "Assets": {
    "BaseAddress": "http://localhost:8081"
  },
  "GovNotify": {
    "ApiKey": "<api_key>"
  },
  "GeneralRedisCache": {
    "ConnectionString": "localhost:6379,ssl=False",
    "DatabaseNumber": 8
  },
  "TokenRedisCache": {
    "ConnectionString": "localhost:6379,ssl=False",
    "DatabaseNumber": 3,
    "InstanceName": "token:"
  },
  "InteractionsRedisCache": {
    "ConnectionString": "localhost:6379,ssl=False",
    "DatabaseNumber": 10,
    "InstanceName": "r:"
  },
  "InteractionLimiter": {
    "InitiateChangeEmailAddressRequest": {
      "TimePeriodInSeconds": 3600,
      "InteractionsPerTimePeriod": 3
    }
  },
  "NodeApiClient": {
    "Apis": {
      "Applications": {
        "BaseAddress": "<base_address>",
        "AuthenticatedHttpClientOptions": {
          "ClientId": "<client_id>",
          "ClientSecret": "<client_secret>",
          "HostUrl": "<host_url>",
          "Resource": "<resource>",
          "Tenant": "<tenant_name>",
          "ProxyUrl": "<proxy_url>",
          "UseProxy": true
        }
      }
    }
  }
}
