@model ChangePasswordViewModel

@{
    ViewData[DsiLayoutConstants.BackLink] = new BackLinkViewModel(Url.Action(
        nameof(HomeController.Index),
        MvcNaming.Controller<HomeController>())
    );

    ViewData[DsiLayoutConstants.Title] = "Change your password";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <form method="post" asp-antiforgery=true>
            <govuk-fieldset>
                <govuk-fieldset-legend is-page-heading="true" class="govuk-fieldset__legend--l">@ViewData[DsiLayoutConstants.Title]</govuk-fieldset-legend>

                <govuk-input for=CurrentPasswordInput class="app-password-toggle" input-class="govuk-!-width-three-quarters" type="password">
                    <govuk-input-label class="govuk-label--s">
                        Current password
                    </govuk-input-label>
                </govuk-input>

                <govuk-input for=NewPasswordInput class="app-password-toggle" input-class="govuk-!-width-three-quarters" type="password">
                    <govuk-input-label class="govuk-label--s">
                        New password
                    </govuk-input-label>
                </govuk-input>

                <govuk-input for=ConfirmNewPasswordInput class="app-password-toggle" input-class="govuk-!-width-three-quarters" type="password">
                    <govuk-input-label class="govuk-label--s">
                        Confirm new password
                    </govuk-input-label>
                </govuk-input>
            </govuk-fieldset>

            <div class="govuk-button-group">
                <govuk-button asp-action=@nameof(ChangePasswordController.PostIndex)>
                    Change password
                </govuk-button>

                <govuk-button asp-action=@nameof(ChangePasswordController.PostCancel) class="govuk-button--secondary">
                    Cancel
                </govuk-button>
            </div>
        </form>
    </div>
</div>
