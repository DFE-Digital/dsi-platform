{
  //
  // IMPORTANT:
  // ==========
  //
  // This file includes sensible default option values for production environments.
  //
  //   * DO NOT put secrets in this file - Use `dotnet user-secrets` instead.
  //
  //   * Omit sensitive options entirely.
  //
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Audit": {
    "ApplicationName": "PublicApi"
  },
  "Kestrel": {
    "Limits": {
      "MaxRequestBodySize": 10000
    }
  },
  "HttpResiliency": {
    "InternalApiDefault": {
      "Timeout": 5
    },
    "NodeApiDefault": {
      "Timeout": 10
    }
  }
}
