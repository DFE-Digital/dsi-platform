{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": "../../src",
          "files": [
            "Dfe.SignIn.Base.Framework/*.csproj",
            "Dfe.SignIn.Core.Public/*.csproj",
            "Dfe.SignIn.PublicApi.Client.AspNetCore/*.csproj",
            "Dfe.SignIn.PublicApi.Client/*.csproj",
            "Dfe.SignIn.PublicApi.Contracts/*.csproj"
          ]
        }
      ],
      "filter": "filterConfig.yml",
      "output": "reference",
      "shouldSkipMarkup": true,
      "namespaceLayout": "nested",
      "memberLayout": "separatePages",
      "enumSortOrder": "declaringOrder"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**",
          "filterConfig.yml"
        ]
      }
    ],
    "overwrite": [
      {
        "src": "..",
        "files": [
          "namespaces/**.md"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "assets/**"
        ]
      }
    ],
    "markdownEngineProperties": {
      "markdigExtensions": [
        "DefinitionLists",
        "GridTables"
      ]
    },
    "postProcessors": [
      "ExtractSearchIndex",
      "DsiHtmlPostProcessor",
      "DsiSearchIndexPostProcessor"
    ],
    "output": "_site",
    "template": [
      "../templates/dsi"
    ],
    "globalMetadata": {
      "_appName": "DfE Sign-in Developer Reference",
      "_appTitle": "DfE Sign-in Developer Reference",
      "_disableContribution": true,
      "_cdnBaseAddress": "https://localhost:3001/",
      "_cdnVersion": "1.0",
      "_surveyUrl": "#",
      "pdf": false
    }
  }
}