{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": "../../src",
          "files": [
            "Dfe.SignIn.Core.ExternalModels/*.csproj",
            "Dfe.SignIn.Core.Framework/*.csproj",
            "Dfe.SignIn.PublicApi.Client/*.csproj",
            "Dfe.SignIn.PublicApi.Client.AspNetCore/*.csproj"
          ]
        }
      ],
      "filter": "filterConfig.json",
      "output": "reference",
      "shouldSkipMarkup": true,
      "namespaceLayout": "nested"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ]
      }
    ],
    "overwrite": [
      {
        "src": "..",
        "files": [
          "namespaces/**.md"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "assets/**"
        ]
      }
    ],
    "output": "../../_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "DfE Sign-in .NET Reference",
      "_appTitle": "DfE Sign-in .NET Reference",
      "_appFooter": "<span>Copyright &copy; Crown Copyright (Department for Education)</span><br><br>Generated by <strong>DocFX</strong></span><br>&nbsp;",
      "_enableSearch": true,
      "_disableContribution": true,
      "_disableNextArticle": true,
      "pdf": false
    }
  }
}
